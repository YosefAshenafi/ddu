
@{
    ViewData["Title"] = "Add Position Jobs";
    ViewData["name"] = "employees";
    ViewData["category"] = "hr";
    //SelectList positions = ViewBag.PositionId;
    //var currentlySelectedIndex = 0; // Currently selected index (usually will come from model)
}
@model EmployeeTransfer
@section Content {
 <div class="container-fluid">
            <div class="block-header">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <ul class="breadcrumb breadcrumb-style ">
                            <li class="breadcrumb-item">
                                <h4 class="page-title">Employee Transfer</h4>
                            </li>
                            <li class="breadcrumb-item bcrumb-1">
                                <a href="../../index.html">
                                    <i class="fas fa-home"></i> Home</a>
                            </li>
                            <li class="breadcrumb-item bcrumb-2">
                                <a href="#" onclick="return false;">Employee Transfer</a>
                            </li>
                            <li class="breadcrumb-item active">Add Transfer</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                <strong>Add</strong> Employee Transfer</h2>
                            <ul class="header-dropdown m-r--5">
                                <li class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">more_vert</i>
                                    </a>
                                    <ul class="dropdown-menu float-end" style="">
                                        <li>
                                            <a href="javascript:void(0);">Action</a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0);">Another action</a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0);">Something else here</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="body">
                            <form method="post"  enctype="multipart/form-data" >
                             <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row clearfix">

                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input asp-for="LetterNo" class="form-control" placeholder="Letter No"/>
                                                        <span asp-validation-for="LetterNo" class="text-danger"></span>
                                           
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                       <div class="form-line">
                                          <input asp-for="LetterDate" type="text" class="form-control datetimepicker flatpickr-input" placeholder="Letter Date" onfocus="(this.type='Date')"/>
                                          <span asp-validation-for="LetterDate" class="text-danger"></span>

                                    </div>
                                </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">                                              
                                                @Html.DropDownListFor(model => model.EmployeeID, new SelectList(Model.ListEmployees, "Value", "Text"),new{@class="col-12 m-t-20 p-l-0"})                                                                              
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                       <div class="form-line">
                                       @Html.DropDownListFor(model => model.PositionId, new SelectList(Model.ListPosition, "Value", "Text"),new{@class="col-12 m-t-20 p-l-0"})
                                           
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                           @Html.DropDownListFor(model => model.DepartmentID, new SelectList(Model.ListDepartment, "Value", "Text"),new{@class="col-12 m-t-20 p-l-0"})
                                           
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group default-select select2Style">
                                        <select asp-for="TransferType" class="form-control select2" data-placeholder="Select">
                                            <option> Select Transfer Type</option>
                                            <option value='Production'>Production</option>
                                            <option value='Replacement'>Replacement</option>
                                            <option value='Shift'>Shift</option>
                                            <option value='Remedial'>Remedial</option>
                                            <option value='Versatility'>Versatility</option>
                                        </select>
                                    
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                  
                                   <input asp-for="EffectiveDate" type="text" class="form-control datetimepicker flatpickr-input" placeholder="Effective Date" onfocus="(this.type='Date')"/>
                                    <span asp-validation-for="EffectiveDate" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group form-float">
                                    
                                         <div class="form-line">
                                            @* <input asp-for="ReportingTo" class="form-control" placeholder="Reporting To"/> *@                                   
                                        </div>
                                    </div>
                                </div>
                            </div> 
                            <div class="col-lg-12 p-t-20 text-center">
                                <button type="submit" class="btn btn-primary waves-effect m-r-15">Submit</button>
                                <button href="@Url.Action("Index","Transfer")" type="button" class="btn btn-danger waves-effect">Cancel</button>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
 
}
    @section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }