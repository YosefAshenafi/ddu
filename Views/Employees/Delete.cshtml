
@{
    ViewData["Title"] = "Delete Employee";
    ViewData["name"] = "employees";
}
@model EmployeeRegistration
@section Content {
 <div class="container-fluid">
            <div class="block-header">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <ul class="breadcrumb breadcrumb-style ">
                            <li class="breadcrumb-item">
                                <h4 class="page-title">Employees</h4>
                            </li>
                            <li class="breadcrumb-item bcrumb-1">
                                <a href="../../index.html">
                                    <i class="fas fa-home"></i> Home</a>
                            </li>
                            <li class="breadcrumb-item bcrumb-2">
                                <a href="#" onclick="return false;">Employees</a>
                            </li>
                            <li class="breadcrumb-item active">Delete Employee</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                <strong>Delete</strong> Employee</h2>
                            <ul class="header-dropdown m-r--5">
                                <li class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">more_vert</i>
                                    </a>
                                    <ul class="dropdown-menu float-end" style="">
                                        <li>
                                            <a href="javascript:void(0);">Action</a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0);">Another action</a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0);">Something else here</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="body">
                            <form method="post"  enctype="multipart/form-data" >
                                 <input asp-for="Image1Path" hidden />
                                <input asp-for="EmployeeID" hidden />
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            
                                            <input asp-for="FirstName" class="form-control" placeholder="First Name"/>
                                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                             <input asp-for="MiddleName" class="form-control" placeholder="Last Name"/>
                                                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                                           
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                             <input asp-for="Email" class="form-control" placeholder="Email"/>
                                                        <span asp-validation-for="Email" class="text-danger"></span>
                                            
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group focused">
                                        
                                          <input asp-for="HireDate" type="text" class="form-control datetimepicker flatpickr-input" placeholder="Joining Date" onfocus="(this.type='Date')"/>
                                                        <span asp-validation-for="HireDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                           
                                            <input asp-for="Designation" class="form-control" placeholder="Designation"/>
                                                        <span asp-validation-for="Designation" class="text-danger"></span>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group form-float">
                                       
                                         <div class="form-line">
                                             <select asp-for="Sex" class="col-12 m-t-20 p-l-0" select2">
                                                            <option>Gender</option>
                                                            <option value="0">Female</option>
                                                            <option value="1">Male</option>                                                           
                                                        </select>
                                    
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input asp-for="Telephone" class="form-control" placeholder="Telephone"/>
                                                        <span asp-validation-for="Telephone" class="text-danger"></span>
                                           
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <input asp-for="BirthDate" type="text" class="form-control datetimepicker flatpickr-input" placeholder="BirthDate" onfocus="(this.type='Date')" />
                                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                                      
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="form-line">
                                            
                                             <input asp-for="Address" class="form-control" placeholder="Address"/>
                                              <span asp-validation-for="Address" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                         
                            
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="control-label col-md-3">Upload Your Profile Photo</label>
                                   
                                        <div class="dz-message">
                                            <div class="drag-icon-cph">
                                                
                                                 <input  name="file" class="form-control" type="file" multiple />
                                            </div>
                                            @*<h3>Drop files here or click to upload.</h3>
                                            <em>(This is just a demo dropzone. Selected files are
                                                <strong>not</strong>
                                                actually uploaded.)</em>*@
                                        </div>
                                        
                                   
                                </div>
                            </div>

                               <div class="col-lg-12 p-t-20 text-center">
                                <button type="submit" class="btn btn-primary waves-effect m-r-15">Submit</button>
                                <button type="button" class="btn btn-danger waves-effect">Cancel</button>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
 
}