@model EmploymentHistory

@{ Layout = null; }

<div class="row">
    <div class="col-md-12">
        <form asp-action="EmpAddOrEdit" asp-route-id="@Model.EmpEmploymentId" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input  asp-for="EmployeeId" type="hidden" />
            <input asp-for="EmpEmploymentId" type="hidden" />
            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input asp-for="Organiazation" class="form-control" placeholder="Organiazation"/>
                                                        <span asp-validation-for="Organiazation" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                             <input asp-for="Job_title" class="form-control" placeholder="Job title"/>
                                                        <span asp-validation-for="Job_title" class="text-danger"></span>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                             <input asp-for="Date_from" type="text" class="form-control datetimepicker flatpickr-input" placeholder="Date from" onfocus="(this.type='Date')"/>
                                                        <span asp-validation-for="Date_from" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group focused">
                                      <input asp-for="Date_to" type="text" class="form-control datetimepicker flatpickr-input" placeholder="Date to" onfocus="(this.type='Date')"/>
                                                        <span asp-validation-for="Date_to" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                             <input asp-for="Date_termination" type="text" class="form-control datetimepicker flatpickr-input" placeholder="Date termination" onfocus="(this.type='Date')"/>
                                                        <span asp-validation-for="Date_termination" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group focused">
                                         <input asp-for="Remark" class="form-control" placeholder="Remark"/>
                                                        <span asp-validation-for="Remark" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                             
                    <div class="form-group">
                        <div class="col-md-6 offset-md-3">
                            <div class="col-lg-12 p-t-20 text-center">                               
                                <button type="submit" class="btn btn-primary waves-effect m-r-15">Submit</button>                               
                                <a  class="btn btn-secondary" asp-controller="Employees" asp-action="Profile" asp-route-id="@Model.EmployeeId")">Back</a>        
                            </div>
                        </div>
            </div>
        </form>
    </div>
</div>
