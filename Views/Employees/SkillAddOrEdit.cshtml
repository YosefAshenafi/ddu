@model EmployeeSkill

@{ Layout = null; }

<div class="row">
    <div class="col-md-12">
        <form asp-action="SkillAddOrEdit" asp-route-id="@Model.EmpSkillId" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input  asp-for="EmployeeId" type="hidden" />
            <input asp-for="EmpSkillId" type="hidden" />
            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input asp-for="Skill" class="form-control" placeholder="Skill"/>
                                                        <span asp-validation-for="Skill" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                             <input asp-for="Aria_valuenow" class="form-control" placeholder="Value now"/>
                                                        <span asp-validation-for="Aria_valuenow" class="text-danger"></span>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                              <input asp-for="Aria_valuemin" class="form-control" placeholder="Value min"/>
                                                        <span asp-validation-for="Aria_valuemin" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group focused">
                                    <input asp-for="Aria_valuemax" class="form-control" placeholder="Value max"/>
                                                        <span asp-validation-for="Aria_valuemax" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                             <input asp-for="Color" class="form-control" placeholder="Color"/>
                                                        <span asp-validation-for="Color" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group focused">
                                         
                                    </div>
                                </div>
                            </div>
                             
                    <div class="form-group">
                        <div class="col-md-6 offset-md-3">
                            <div class="col-lg-12 p-t-20 text-center">                               
                                <button type="submit" class="btn btn-primary waves-effect m-r-15">Submit</button>                               
                                <a  class="btn btn-secondary" asp-controller="Employees" asp-action="Profile" asp-route-id="@Model.EmployeeId")">Back</a>        
                            </div>
                        </div>
            </div>
        </form>
    </div>
</div>
