                                <div class="body">
                                    <div class="table-responsive">
                                        <table class="table table-hover js-basic-example contact_list" id="example">
                                            <thead>
                                                <tr>
                                                    <th></th>
                                                    <th class="center"> ItemCode </th>
                                                    <th class="center"> ItemName </th>
                                                    <th class="center"> Item Nature </th>
                                                    <th class="center"> Item Family </th>
                                                    <th class="center"> Onhand </th>
                                                    <th class="center"> ReoredrPoint </th>
                                                    <th class="center"> Minimum </th>
                                                    <th></th>

                                                </tr>
                                            </thead>
                                            @foreach (var obj in Model)
                                            {
                                                <tbody>
                                                    <tr data-id=@obj.ItemID>
                                                        <td>

                                                            <div class="switch">
                                                                <label>
                                                                    <input class="form-check-input" asp-items=@obj.ItemID type="checkbox" id=@obj.ItemID>

                                                                    <span class="lever switch-col-light-green"></span>
                                                                </label>
                                                            </div>
                                                        </td>

                                                        <td>@obj.ItemCode</td>
                                                        <td>@obj.ItemName</td>
                                                        <td>@obj.NatureName</td>
                                                        <td>@obj.FamilyName</td>
                                                        <td>@obj.Quantity</td>
                                                        <td>@obj.ReoredrPoint</td>
                                                        <td>@obj.Minimum</td>
                                                        <td class="center">

                                                            <a asp-controller="Inventory" asp-action="BinCard" asp-route-id="@obj.ItemID" class="btn btn-tbl-add">
                                                                <i class="material-icons">dehaze</i>
                                                            </a>
                                                        </td>

                                                    </tr>
                                                </tbody>
                                            }

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
