    <script>
        $(function () {
            var dataId
            $('#example tbody').on('click', 'tr', function () {
                dataId = $(this).attr("data-id");
                
            });
            $('#example tbody').on('change', 'input[type="checkbox"]', function () {
                if (this.checked) {
                    // the checkbox is now checked
                    $.getJSON("/Inventory/Stockchecked", { id: dataId },
                        function (d) {
                            $("#btngrn").html("+GRN(" + d + ")");
                            $("#btnisv").html("+ISV(" + d + ")");
                            $("#btnreturn").html("+Return(" + d + ")");
                            $("#btndisposal").html("+Disposal(" + d + ")");
                            $("#btnphysical").html("+Physical(" + d + ")");
                            $("#btnadjustment").html("+Adjustmentl(" + d + ")");
                            $("#btntransfer").html("+Transfer(" + d + ")");
                        })

                } else {
                    alert("uncheckbox " + dataId)
                }
            });
        })
    </script>
