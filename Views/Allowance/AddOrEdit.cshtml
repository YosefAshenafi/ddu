@model Allowance
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.EmployeeID" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="EmployeeID" type="hidden" />
            <input asp-for="AllowanceID" type="hidden" />
            <div class="row clearfix">
                <div class="col-sm-6">
                    <div class="form-group">
                        <div class="form-line">
                            @*@Html.DropDownListFor(model => model.AllowanceType, new SelectList(Model.ListAllowanceType, "Value", "Text"),new{@class="col-12 m-t-20 p-l-0"})*@

                            <select asp-for="AllowanceType" class="form-control select2" data-placeholder="Select">
                                <option> Select Allowance Type</option>
                                <option value='1'>Food</option>
                                <option value='2'>Transport</option>
                                <option value='3'>Phone</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <div class="form-line">
                            <input asp-for="EffectiveDate" type="text" class="form-control datetimepicker flatpickr-input" placeholder="Effective Date" onfocus="(this.type='Date')" />
                            <span asp-validation-for="EffectiveDate" class="text-danger"></span>

                        </div>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-6">
                    <div class="form-group">
                        <div class="form-line">
                            <input asp-for="Amount" class="form-control" placeholder="Amount" />
                            <span asp-validation-for="Amount" class="text-danger"></span>

                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group focused">

                        <input asp-for="Remark" class="form-control" placeholder="Remark" />
                        <span asp-validation-for="Remark" class="text-danger"></span>
                    </div>
                </div>
            </div>
          

            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <div class="col-lg-12 p-t-20 text-center">
                    
                        <button type="submit" class="btn btn-primary waves-effect m-r-15">Submit</button>
                        <a class="btn btn-secondary" asp-controller="Allowance" asp-action="AllowanceDetail" asp-route-id="@Model.EmployeeID" )">Back</a>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
