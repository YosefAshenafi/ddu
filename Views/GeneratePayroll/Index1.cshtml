						<button onclick="location.href='@Url.Action("GeneratePayrolAsync","GeneratePayroll")'" class="login100-form-btn">
							Generate Payroll
						</button>
						<a class="btn btn-secondary" asp-controller="GeneratePayroll" asp-action="GeneratePayrolAsync">Back</a>
					</div>
					<div class="text-center p-t-45 p-b-20">
						@*<span class="txt2">
