@model DDU.Models.Department
@{
    ViewData["Title"] = "Add Departments";
    ViewData["name"] = "departments";
    ViewData["category"] = "hr";
}
@section Content {
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title">Edit Department</h4>
                        </li>
                        <li class="breadcrumb-item bcrumb-1">
                            <a href="#">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                        <li class="breadcrumb-item bcrumb-2">
                            <a href="#" onClick="return false;">Departments</a>
                        </li>
                        <li class="breadcrumb-item active">Edit Department</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="header">
                        <h2><strong>Add</strong> Department</h2>
                    </div>
                    <form method="post" enctype="multipart/form-data" action="@Url.Action("SaveDepartment","Department")">
                        <div class="body">
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" name="DepartmentName" class="form-control" placeholder="Department Name" value="@Model.DepartmentName" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" name="DepartmentCode" class="form-control" placeholder="Department Code" value="@Model.DepartmentCode" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" name="Phone" class="form-control" placeholder="Phone" value="@Model.Phone" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input id="email" name="Email" type="email" class="validate form-control" placeholder="Email" value="@Model.Email">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <select name="ParentDepartmentId">
                                            <option disabled selected>Parent Department</option>
                                            <option>-</option>
                                            @foreach (var department in ViewData["Departments"] as List<DDU.Models.Department>)
                                            {
                                                if (Model.ParentDepartmentID == department.DepartmentID)
                                                {
                                                    <option value="@department.DepartmentID" selected>@department.DepartmentName</option>
                                                }
                                                else
                                                {
                                                    <option value="@department.DepartmentID">@department.DepartmentName</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" name="TotalEmpNo" class="form-control" placeholder="Total Employees" value="@Model.TotalEmpNo" />
                                            <input type="hidden" name="IsActive" value="true" />
                                            <input type="hidden" name="DepartmentId" value="@Model.DepartmentID" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 p-t-20 text-center">
                                <button type="submit" class="btn btn-primary waves-effect m-r-15">Save</button>
                                <button onclick="location.href='@Url.Action("Index","Department")'" class="btn btn-danger waves-effect">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}