}
@model EmployeeStatusChange
@section Content {
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title">Termination/Rehiring</h4>
                        </li>
                        <li class="breadcrumb-item bcrumb-1">
                            <a href="../../index.html">
                                <i class="fas fa-home"></i> Termination
                            </a>
                        </li>
                        <li class="breadcrumb-item bcrumb-2">
                            <a href="#" onclick="return false;">Termination/Rehiring</a>
                        </li>
                        <li class="breadcrumb-item active">Add Termination/Rehiring</li>
                    </ul>
                </div>
            </div>
         </div>

        
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                <strong>Add</strong> Termination/Rehiring
                            </h2>
                            <ul class="header-dropdown m-r--5">
                                <li class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">more_vert</i>
                                    </a>
                                    <ul class="dropdown-menu float-end" style="">
                                        <li>
                                            <a href="javascript:void(0);">Action</a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0);">Another action</a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0);">Something else here</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="body">
                            <form method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="row clearfix">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @Html.DropDownListFor(model => model.TerminationType, new SelectList(Model.ListStatus, "Value", "Text"),new{@class="col-12 m-t-20 p-l-0"})

                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @Html.DropDownListFor(model => model.EmployeeID, new SelectList(Model.ListEmployees, "Value", "Text"),new{@class="col-12 m-t-20 p-l-0"})

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label for="email_address">Request Date</label>
                                            <input type="text" value="@DateTime.Now.ToShortDateString()" class="flatpickr"
                                               placeholder="RequestDate" asp-for="RequestDate" onfocus="(this.type='Date')" />
                                            @*<input asp-for="RequestDate" type="text" class=flatpickr data-enable-time=true data-allow-input=true" placeholder=@DateTime.Now.ToShortDateString() onfocus="(this.type='Date')" />*@
                                                <span asp-validation-for="RequestDate" class="text-danger"></span>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">

                                        <label for="email_address">Date On</label>                                      
                                        <input asp-for="DateOn" type="text" value="@DateTime.Now.ToShortDateString()" class="flatPicker" placeholder="DateOn" onfocus="(this.type='Date')" />
                                        <span asp-validation-for="DateOn" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>
@*                                <div class="row clearfix">

                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <div class="form-line">
                                                <input asp-for="RequestDate" type="text" class="form-control datetimepicker flatpickr-input" placeholder="Request Date" onfocus="(this.type='Date')" />
                                                <span asp-validation-for="RequestDate" class="text-danger"></span>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                    <div class="form-group">

                                            <input asp-for="DateOn" type="text" class="form-control datetimepicker flatpickr-input" placeholder="Date On" onfocus="(this.type='Date')" />
                                            <span asp-validation-for="DateOn" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>*@
                                <div class="row clearfix">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <div class="form-line">
                                                <input asp-for="Reason" class="form-control" placeholder="Reason" />
                                                <span asp-validation-for="Reason" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group form-float">

                                            <div class="form-line">
                                                <input asp-for="Remark" class="form-control" placeholder="Remark" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 p-t-20 text-center">
                                    <button type="submit" class="btn btn-primary waves-effect m-r-15">Submit</button>
                                    <button href="@Url.Action("Index","EmployeeStatusChange")" type="button" class="btn btn-danger waves-effect">Cancel</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
}
    @section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }