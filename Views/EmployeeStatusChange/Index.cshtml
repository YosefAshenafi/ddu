@{
    ViewData["Title"] = "Home Page";
    ViewData["name"] = "TerminationRehire";
    ViewData["category"] = "hr";
}
@model IEnumerable<vw_EmployeeStatusChange>
@section Content{
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title">Termination/Rehire</h4>
                        </li>
                        <li class="breadcrumb-item bcrumb-1">
                            <a href="#">
                                <i class="fas fa-home"></i> HR
                            </a>
                        </li>
                        <li class="breadcrumb-item bcrumb-2">
                            <a href="#" onClick="return false;">Termination/Rehire</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2 style="display:flex; justify-content: space-between; margin-right: 20px;">
                            <strong>Termination/Rehire</strong>
                            <button onclick="location.href='@Url.Action("AddEmployeeStatusChanges","EmployeeStatusChange")'" class="btn btn-sucess d-flex align-items-center"><i class="fa fa-plus-circle me-2"></i>Add Termination</button>
                        </h2>
                        <ul class="header-dropdown m-r--5">
                            <li class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-bs-toggle="dropdown"
                               role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">more_vert</i>
                                </a>
                                <ul class="dropdown-menu float-end">
                                    <li>
                                        <a href="javascript:void(0);">Action</a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0);">Another action</a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0);">Something else here</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table class="table table-hover js-basic-example contact_list">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th> Employee Name</th>
                                        <th> Request Date </th>
                                        <th> Date On </th>
                                        <th> Status </th>
                                        <th> Reason </th>
                                        <th> Action </th>
                                    </tr>
                                </thead>
                                <tbody class="text-left">
                                @foreach (var obj in Model)
                                {
                                    <tr>
                                        <td class="table-img center">
                                            <a href="@Url.Action("Profile","Home")"><img src="~/assets/images/user/employee.jpg" alt=""></a>
                                        </td>
                                            <td>@String.Format("{0} {1}",obj.FirstName,obj.MiddleName)</td>
                                            @if (obj.RequestDate.HasValue)
                                            {

                                                <td class="center">@obj.RequestDate.Value.ToString("MMM-dd-yyyy")</td>
                                            }
                                            else
                                            {
                                                <td></td>
                                            }
                                            @if (obj.DateOn.HasValue)
                                            {

                                                <td class="center">@obj.DateOn.Value.ToString("MMM-dd-yyyy")</td>
                                            }
                                            else
                                            {
                                                <td></td>
                                            }                                       
                                        
                                        <td>@obj.StatusChange</td>
                                        <td>@obj.Reason</td>
                                        <td>
                                            <a asp-controller="EmployeeStatusChange" asp-action="Edit" asp-route-id="@obj.EmployeeStatusChangeID" class="btn btn-tbl-edit">
                                                <i class="material-icons">create</i>
                                            </a>
                                                <form asp-action="Delete" asp-route-id="@obj.EmployeeStatusChangeID" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">

                                                    <button type="submit" value="Delete" class="btn btn-tbl-delete">
                                                        <i class="material-icons">delete_forever</i>
                                                    </button>
                                                </form>
                                        </td>
                                    </tr>                               
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

